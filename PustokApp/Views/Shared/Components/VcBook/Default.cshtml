@model List<Book>
@foreach (var item in Model)
{
    BookPhoto poster = item.BookPhotos.FirstOrDefault(x => x.PosterStatus == true);
    BookPhoto posterHover = item.BookPhotos.FirstOrDefault(x => x.PosterStatus == false);
    <div class="col-lg-4 col-sm-6">
        <div class="product-card card-style-list">
            <div class="product-grid-content">
                <div class="product-header">
                    <a href="#" class="author">
                        @item.Author.Fullname
                    </a>
                    <h3><a href="product-details.html">Here Is A Quick Cure For Book</a></h3>
                </div>
                <div class="product-card--body">
                    <div class="card-image">
                        <img src="~/assets/image/products/@(poster==null?"":poster.Name)" alt="">
                        <div class="hover-contents">
                            <a href="product-details.html" class="hover-image">
                                <img src="~/assets/image/products/@(posterHover==null?"":posterHover.Name)" alt="">
                            </a>
                            <div class="hover-btns">
                                <a href="cart.html" class="single-btn">
                                    <i class="fas fa-shopping-basket"></i>
                                </a>
                                <a href="wishlist.html" class="single-btn">
                                    <i class="fas fa-heart"></i>
                                </a>
                                <a href="compare.html" class="single-btn">
                                    <i class="fas fa-random"></i>
                                </a>
                                <a href="#" data-bs-toggle="modal" data-bs-target="#quickModal"
                                   class="single-btn">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="price-block">
                        @if (item.DiscountPercent > 0)
                        {
                            <span class="price">£@item.DiscountedPrice</span>
                            <del class="price-old">£@item.Price</del>
                            <span class="price-discount">@item.DiscountPercent%</span>
                        }
                        else
                        {
                            <span class="price-discount">£@item.Price</span>

                        }

                    </div>
                </div>
            </div>
            <div class="product-list-content">
                <div class="card-image">
                    <img src="~/assets/image/products/@(poster==null?"":poster.Name)" alt="">
                </div>
                <div class="product-card--body">
                    <div class="product-header">
                        <a href="#" class="author">
                            @item.Author.Fullname
                        </a>
                        <h3>
                            <a href="product-details.html" tabindex="0">
                                @item.Name
                            </a>
                        </h3>
                    </div>
                    <article>
                        <h2 class="sr-only">Card List Article</h2>
                        <p>
                            @item.Desc
                        </p>
                    </article>
                    <div class="price-block">
                        @if (item.DiscountPercent > 0)
                        {
                            <span class="price">£@item.DiscountedPrice</span>
                            <del class="price-old">£@item.Price</del>
                            <span class="price-discount">@item.DiscountPercent%</span>
                        }
                        else
                        {
                            <span class="price-discount">£@item.Price</span>

                        }
                    </div>
                    <div class="rating-block">
                        <span class="fas fa-star star_on"></span>
                        <span class="fas fa-star star_on"></span>
                        <span class="fas fa-star star_on"></span>
                        <span class="fas fa-star star_on"></span>
                        <span class="fas fa-star "></span>
                    </div>
                    <div class="btn-block">
                        <a asp-action="addbasket" asp-controller="book" asp-route-id="@item.Id" class="btn btn-outlined">Add To Cart</a>
                        <a href="#" class="card-link">
                            <i class="fas fa-heart"></i> Add To
                            Wishlist
                        </a>
                        <a asp-action="addbasket" asp-controller="book" asp-route-id="@item.Id" class="card-link">
                            <i class="fas fa-random"></i> Add To
                            Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

}